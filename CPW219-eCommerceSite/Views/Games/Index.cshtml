@model IEnumerable<Games>

@{
    ViewData["Title"] = "Game Catalog";
}

<h1>Game Catalog</h1>

<p>
    <a asp-action="CreateWithModelBinding" asp-asp-controller="Games">Create Game</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GamesId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Games item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GamesId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-itemid="@item.GamesId">Edit</a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-itemid="@item.GamesId">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-itemid="@item.GamesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
